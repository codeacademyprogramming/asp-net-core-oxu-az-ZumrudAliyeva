<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/54e137977b.js" crossorigin="anonymous"></script>
    
    <title>OxuAZ</title>
</head>
<body>
    <header class="header">
        <div class="header-primary">
            <div class="l-center">
                <div class="header-side">
                    <a class="link" href="">Haqqımızda</a>
                    <a class="link" href="">Reklam</a>
                    <div class="social-icon">
                        <a class="facebook icon" href=""><i class="fab fa-facebook-square"></i></a>
                        <a class="twit icon" href=""><i class="fab fa-twitter"></i></a>
                        <a class="andorid icon" href=""><i class="fas fa-robot"></i></a>
                        <a class="iphone icon" href=""><i class="fab fa-apple"></i></a>
                    </div>
                    <div class="search"></div>
                    <div class="search-container">
                        <form action="">
                            <input class="search-input" type="text" placeholder="Axtarış">
                            <button class="submit" type="submit">
                                <i class="fas fa-search sub"></i>

                            </button>
                        </form>
                    </div>
                    <a class="language" href="">ru</a>
                </div>
                <a class="logo" href="">oxu.az</a>
                <div class="nav-toggle"></div>
            </div>
        </div>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - oxu.news - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>