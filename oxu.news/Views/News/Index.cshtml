@model IEnumerable<oxu.news.Models.News>


@{
    ViewData["Title"] = "Index";
}

<div class="page-content">
    <div class="container">
        <section class="slider">
            <div class="news-i"></div>
            <div class="slider-nav">
                <a href="">
                    <!-- <span>İri ticarət mərkəzlərinin açılmamasının səbəbi bilindi</span>
                    <span class="valign"></span> -->
                </a>
                <a href=""></a>
                <a href=""></a>
                <a href=""></a>
                <a href=""></a>
            </div>
            <div class="featured">
                <div class="prev switch">
                    <i class="fas fa-chevron-left"></i>
                </div>
                <div class="next switch">
                    <i class="fas fa-chevron-right"></i>
                </div>
                <div class="progress-container"></div>
                <div class="inner">
                    <a class="featured-i" href="second.html">
                        <img src="~/img-static/15964345805842046018_1000x669.jpg" alt="">
                        <div class="img-content">
                            <div class="main-news">
                                <span class="date">3Avg</span>
                                <span class="time">17:59</span>
                                <span class="views">8448</span>
                            </div>
                            <div class="text">
                                <div class="title2">İri ticarət mərkəzlərinin açılmamasının səbəbi bilindi</div>
                                <div class="description"></div>
                            </div>
                        </div>
                    </a>
                    <a class="featured-i" href="second.html">
                        <img src="~/img-static/1593151281479_5g6KhG8i.jpg" alt="">
                        <div class="img-content">
                            <div class="main-news">
                                <span class="date">3Avg</span>
                                <span class="time">17:59</span>
                                <span class="views">8448</span>
                            </div>
                            <div class="text">
                                <div class="title2">İri ticarət mərkəzlərinin açılmamasının səbəbi bilindi</div>
                                <div class="description"></div>
                            </div>
                        </div>
                    </a>
                    <a class="featured-i" href="second.html">
                        <img src="~/img-static/auto.jpg" alt="">
                        <div class="img-content">
                            <div class="main-news">
                                <span class="date">3Avg</span>
                                <span class="time">17:59</span>
                                <span class="views">8448</span>
                            </div>
                            <div class="text">
                                <div class="title2">İri ticarət mərkəzlərinin açılmamasının səbəbi bilindi</div>
                                <div class="description"></div>
                            </div>
                        </div>
                    </a>

                </div>
            </div>
        </section>
        <section class="new-list row">
            @foreach (var news in Model)
            {
            <div class="news-i col-4">
                <a asp-action="Get" asp-controller="News" asp-route-id="@news.Id">
                    <div class="when">
                        <div class="when-date">
                            <div class="date-day">@news.CreationDate.Day.ToString()</div>
                            <div class="date-month">@news.CreationDate.Month.ToString()</div>
                            <div class="date-year">@news.CreationDate.Year.ToString()</div>
                        </div>
                        <div class="when-time">@news.CreationDate.Hour:@news.CreationDate.Minute</div>
                    </div>
                    <div class="img-container">
                        <div class="img"><img src="~/images/@news.ImageName" /></div>
                    </div>
                    <div class="news-content">
                        <div class="title3">@news.Name</div>
                        <div class="description1"></div>
                    </div>
                </a>
                <div class="status">
                    <div class="like status-i">

                        <a asp-action="IncreaseLike" asp-controller="News" asp-route-id="@news.Id">
                            <i class="fas fa-thumbs-up"></i>
                            @news.Like
                        </a>
                    </div>
                    <div class="dislike status-i">
                        <a asp-action="IncreaseDislike" asp-controller="News" asp-route-id="@news.Id">
                            <i class="fas fa-thumbs-down"></i>
                            @news.Dislike
                        </a>
                    </div>
                    <div class="view status-i">
                        <a><i class="fas fa-eye"></i>@news.View</a>
                    </div>
                </div>
            </div>
            }
        </section>
    </div>
</div>